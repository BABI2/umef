@model Site_De_Swiss_UMEF.Models.Article
@inject Site_De_Swiss_UMEF.Data.DataContext Contexts
@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutAdministrator";

    var ListCategories = Contexts.Categories.ToList();
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<link href="~/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="~/js/froala_editor.pkgd.min.js"></script>
<div class="col md">


    <div class="card">
        <div class="card-header">
            <h3 class="text-uppercase">new Article</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="id_article" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="title" class="control-label"></label>
                            <input asp-for="title" class="form-control" />
                            <span asp-validation-for="title" class="text-danger"></span>
                        </div>
                    </div>
                    @*<div class="col-md-12">
                    <label asp-for="content" class="control-label"></label>
                    <div class="form-group">

                    <textarea asp-for="content" name="content" id="myEditor"></textarea>
                    <script>
                    var editor = new FroalaEditor('#myEditor')
                    </script>

                    </div>
                    </div>
                    *@


                    <div class="col-md-12">
                        <div class="form-group">
                            <textarea asp-for="content" placeholder="" style="width:100%;height:200px">@Html.Raw(Model.content)</textarea>
                        </div>
                    </div>
                    <span asp-validation-for="content" class="text-danger"></span>

                </div>
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="image_article" class="control-label"></label>
                            <div class="custom-file">
                                <input asp-for="image_article" class="custom-file-input" />
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                            <span asp-validation-for="image_article" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="description" class="control-label"></label>
                            <input asp-for="description" min="1" class="form-control" />
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="icons" class="control-label"></label>
                            <input asp-for="icons" class="form-control" />
                            <span asp-validation-for="icons" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label>
                            Category:<span class="text-danger">*</span>
                        </label>
                        <select type="int" name="id_categorie" class="form-control" required>

                            @foreach (var cat in ListCategories)
                            {
                                <option value="@cat.id_categorie">@cat.display_name</option>
                            }
                        </select>
                    </div>
                </div> <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-sm btn-primary rounded-0" />
                    <a asp-action="Index" class="btn btn-sm btn-primary rounded-0">Back to List</a>
                    <a asp-action="SendNewsletter" asp-route-Id="@Model.id_article" class="btn btn-sm btn-primary rounded-0">Send by newsletter</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~app.js"></script>
@*<script src="~/lib/tinymce/tinymce.js"></script>*@
<script src="~/lib/tinymce/tinymce.min.js"></script>
<script src="~/lib/tinymce/main.js"></script>
